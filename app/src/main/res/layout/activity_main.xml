<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <TextView
        android:id="@+id/Flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="@string/qui_est_l_actuel_president_des_etats_unis"
        android:textAlignment="center"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/Flashcard_Answer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/Flashcard_question"
        android:layout_marginTop="6dp"
        android:text="Donald Trump"
        android:textAlignment="center"
        android:textSize="40sp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/myBtn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/my_icon_name"
        android:layout_height="match_parent"
        android:layout_width="match_parent" />






</RelativeLayout>